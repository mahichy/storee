<table class="table table-hover">
	<thead>
		<tr>
			<th>Quantity</th>
			<th>Product</th>
			<th>Price</th>
		</tr>
	</thead>	
<% @cart.items.each do |item| %>
	<tr>
		<td><%= item.quantity %></td>
		<td>
			<%= image_tag item.product.image_url %>
			<%= link_to item.product.name, item.product %></td>
		<td><%= item.total_price %></td>
	</tr>
<% end -%>


</table>
<%= @cart.total_price %>

